{
    "name": "cppsarif",
    "displayName": "cppsarif",
    "description": "cppsarif",
    "icon": "share/package.png",
    "publisher": "shyeyian",
    "version": "1.1.50",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Language Packs"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/shyeyian/vscode-cppsarif"
    },
    "main": "contribute/view/sarif.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "make",
                    "title": "%make%",
                    "icon": "$(issues)"
                }
            ]
        },
        "views": {
            "make": [
                {
                    "id": "sarif",
                    "name": "%sarif%",
                    "icon": "$(issues)"
                }
            ]
        },
        "configuration": {
            "title": "cppsarif",
            "properties": {
                "cppsarif.sarifDirectory": {
                    "type": "string",
                    "markdownDescription": "Path to compiler output sarif directory. Requires: containing single or multiple `.sarif` files. Default: `.`",
                    "default": "."
                }
            }
        }
    }
}
