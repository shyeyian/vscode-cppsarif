{
    "name": "cppsarif",
    "displayName": "cppsarif",
    "description": "cppsarif",
    "icon": "share/package.png",
    "publisher": "shyeyian",
    "version": "1.1.50",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Language Packs"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/shyeyian/vscode-cppsarif"
    },
    "main": "contribute/view/sarif.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "title": "cppsarif",
            "properties": {
                "cppsarif.sarifDirectory": {
                    "type": "string",
                    "markdownDescription": "Path to compiler output sarif directory. Requires: containing single or multiple `.sarif` files. Default: `.`",
                    "default": "."
                }
            }
        },
        "keybindings": {
            "key": "ctrl+shift+m",
            "command": "sarif.focus"
        },
        "commands": [
            {
                "command": "cppsarif.runTask",
                "title": "%runTask%",
                "icon": "$(debug-start)"
            },
            {
                "command": "cppsarif.selectTask",
                "title": "%selectTask%",
                "icon": "$(chevron-down)"
            },
            {
                "command": "cppsarif.openTasksJson",
                "title": "%openTasksJson%",
                "icon": "$(gear)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "cppsarif.runTask",
                    "when": "view == sarif",
                    "group": "navigation@1"
                },
                {
                    "command": "cppsarif.selectTask",
                    "when": "view == sarif",
                    "group": "navigation@2"
                },
                {
                    "command": "cppsarif.openTasksJson",
                    "when": "view == sarif",
                    "group": "navigation@3"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "make",
                    "title": "%make%",
                    "icon": "$(issues)"
                }
            ]
        },
        "views": {
            "make": [
                {
                    "id": "sarif",
                    "name": "%sarif%",
                    "icon": "$(issues)"
                }
            ]
        }
    }
}
